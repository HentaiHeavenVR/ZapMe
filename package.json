{
  "name": "zapme",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "init": "npm run build:wasm && npm install",
    "dev": "vite",
    "clean": "run-p -l clean:*",
    "clean:api": "rimraf src/api/generated",
    "clean:wasm": "rimraf wasm/pkg wasm/Cargo.lock",
    "clean:svelte": "rimraf .routify dist",
    "build": "run-s -l clean build:wasm build:api build:svelte",
    "build:api": "cross-env TS_POST_PROCESS_FILE=\"node scripts/cleanOpenApiFile.js\" openapi-generator-cli generate",
    "build:wasm": "cd wasm && wasm-pack build --release --target bundler --out-dir pkg",
    "build:svelte": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test:wasm": "cd wasm && wasm-pack test --release --chrome --firefox --safari --headless"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@rgossiaux/svelte-headlessui": "^1.0.2",
    "@roxi/routify": "^3.0.0-next.1",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@tsconfig/svelte": "^3.0.0",
    "cross-env": "^7.0.3",
    "crypto-random-string": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.2",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-i18n": "^3.6.0",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "wasm": "file:wasm/pkg"
  },
  "browserslist": {
    "production": [
      "> 0.5%",
      "not dead",
      "not op_mini all",
      "supports es6-module"
    ],
    "development": [
      "last 1 version"
    ]
  }
}
