{
  "name": "zapme",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "init": "npm run build:wasm && npm install",
    "dev": "vite",
    "clean": "run-p -l clean:*",
    "clean:api": "rimraf src/api/generated",
    "clean:wasm": "rimraf wasm/pkg wasm/Cargo.lock",
    "clean:svelte": "rimraf .routify dist",
    "build": "run-s -l clean build:wasm build:api build:svelte",
    "build:api": "cross-env openapi-generator-cli generate",
    "build:wasm": "cd wasm && wasm-pack build --release --target bundler --out-dir pkg",
    "build:svelte": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "run-s -l test:wasm test:svelte",
    "test:ui": "run-s -l test:wasm test:svelte:ui",
    "test:wasm": "cd wasm && wasm-pack test --release --chrome --firefox --headless",
    "test:svelte": "vitest --run",
    "test:svelte:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@roxi/routify": "^3.0.0-next.1",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@testing-library/svelte": "^3.2.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/jest": "^29.4.0",
    "@vitest/ui": "^0.28.5",
    "cross-env": "^7.0.3",
    "crypto-random-string": "^5.0.0",
    "jsdom": "^21.1.0",
    "npm-check-updates": "^16.7.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.2",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-i18n": "^3.6.0",
    "svelte-local-storage-store": "^0.4.0",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.5",
    "wasm": "file:wasm/pkg"
  },
  "browserslist": {
    "production": [
      "> 0.5%",
      "not dead",
      "not op_mini all",
      "supports es6-module"
    ],
    "development": [
      "last 1 version"
    ]
  }
}
