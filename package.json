{
  "name": "zapme",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "sync": "svelte-kit sync",
    "build": "run-s -l clean:api build:api build:app",
    "build:app": "vite build",
    "build:api": "openapi-generator-cli generate",
    "package": "svelte-kit package",
    "preview": "vite preview",
    "test:all": "run-s -l check lint format:check test:ci",
    "test:ci": "run-s -l test:ui test:unit:ci",
    "test:ui": "playwright test",
    "test:unit": "vitest",
    "test:unit:ci": "vitest --run",
    "coverage": "vitest run --coverage",
    "check": "svelte-kit sync && svelte-check --no-tsconfig --ignore src/lib/api/**/*",
    "check:watch": "svelte-kit sync && svelte-check --watch --no-tsconfig --ignore src/lib/api/**/*",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "run-p clean:*",
    "clean:app": "rimraf .svelte-kit",
    "clean:api": "rimraf src/lib/api"
  },
  "devDependencies": {
    "@floating-ui/dom": "^1.4.5",
    "@fontsource/montserrat": "^5.0.5",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@openapitools/openapi-generator-cli": "^2.6.0",
    "@playwright/test": "^1.36.0",
    "@sentry/browser": "^7.58.1",
    "@sentry/svelte": "^7.58.1",
    "@skeletonlabs/skeleton": "^1.9.0",
    "@sveltejs/adapter-cloudflare": "^2.3.1",
    "@sveltejs/kit": "^1.22.3",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/svelte": "^4.0.3",
    "@tsconfig/svelte": "^5.0.0",
    "@types/showdown": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "email-validator": "^2.0.4",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte": "^2.32.2",
    "flatbuffers": "^23.5.26",
    "http-status-codes": "^2.2.0",
    "jwt-decode": "^3.1.2",
    "npm-check-updates": "^16.10.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.26",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "prettier-plugin-tailwindcss": "^0.4.0",
    "rimraf": "^5.0.1",
    "showdown": "^2.1.0",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.6",
    "svelte-local-storage-store": "^0.5.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vitest": "^0.33.0"
  },
  "browserslist": {
    "production": [
      "> 0.5%",
      "not dead",
      "not op_mini all",
      "supports es6-module"
    ],
    "development": [
      "last 1 version"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "crlf",
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteStrictMode": false,
    "svelteAllowShorthand": true,
    "importOrder": [
      "^@skeletonlabs/skeleton/themes.+\\.css$",
      "^@skeletonlabs/skeleton/styles.+\\.css$",
      "^.+\\.postcss$",
      "^."
    ],
    "plugins": [
      "prettier-plugin-svelte",
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "pluginSearchDirs": [
      "."
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  }
}
